<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- <include
        android:id="@+id/title_modpwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/commom_top_bar" />
 -->
       <RelativeLayout
        android:id="@+id/ly_chat_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar" >
        
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_top_back_left_w"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/title"
            android:gravity="center"
            android:text="设置昵称"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/lashenbeijing"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <!-- 昵称 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="昵称"
            android:textColor="#808080"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_nikename"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="left|center_vertical"
            android:textColorHint="#808080"
            android:background="@drawable/lashenbeijing"
            android:hint="请输入新昵称"
            android:maxLength="8"
            android:paddingLeft="10dp" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_mod_nicname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/btn"
        android:text="提交" />

</LinearLayout>